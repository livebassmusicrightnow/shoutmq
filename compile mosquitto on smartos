PACKAGES="libxslt docbook-xsl libcares libares"
pkgin -y install $PACKAGES

patch man/html.xsl with '<xsl:import href="/opt/local/share/xsl/docbook/html/docbook.xsl"/>'

wget http://mosquitto.org/files/source/mosquitto-1.4.8.tar.gz

wget https://raw.githubusercontent.com/doublerebel/arangodb/6b226318d6266e8332e7f539f1ddb23e788a7492/utils/gld-wrapper

LD_ALTEXEC=~/mosquitto-1.4.8/gld-wrapper CC=gcc CFLAGS="-I/opt/local/include -I/opt/local/include/node" LDFLAGS="-Wl,-rpath,/opt/local/lib,-rpath-link,/opt/local/lib -L/opt/local/lib" make binary

get mosquitto in pkgsrc!